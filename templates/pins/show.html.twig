{% extends 'base.html.twig' %}

{% block title %}Pins{% endblock %}

{% block body %}
    <h1>Pins</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pin.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pin.name }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ pin.source }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pin.description }}</td>
            </tr>
            <tr>
                <th>Idcorporation</th>
                <td>{{ pin.idcorporation }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ pin.date ? pin.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pins_index') }}">back to list</a>

    <a href="{{ path('app_pins_edit', {'id': pin.id}) }}">edit</a>

    {{ include('pins/_delete_form.html.twig') }}
{% endblock %}
